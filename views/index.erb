          <div class="large-4 columns">
            <ul>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round alert label">X</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
            </ul>
          </div>
          <div class="large-4 columns">
            <ul>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round alert label">X</span> Item 1</li>
            </ul>
          </div>
          <div class="large-4 columns">
            <ul>
              <li style="list-style-type:none;padding:3px;"><span class="round success label">✓</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round alert label">X</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round alert label">X</span> Item 1</li>
              <li style="list-style-type:none;padding:3px;"><span class="round alert label">X</span> Item 1</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="large-3 columns panel">
        <% img_arry = [1,2,4,5,7,9,10] %>
        <% deleted = img_arry.delete_at(rand(0..img_arry.length-1)) %>
        <a data-lightbox="property_1" href="/images/<%= deleted %>.jpg">
          <h5>Click for more photos >></h5>
          <img class="th" src="/images/<%= deleted %>.jpg" style="max-height:300px;">
        </a>
        <% img_arry.each do |i| %>
          <a class="th" data-lightbox="property_1" href="/images/<%= i %>.jpg" style="display:none;">
            <img src="/images/<%= i %>.jpg" style="max-height:300px;">
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <hr />
    (c) <%= Time.now.year %> Revent.
    <hr />
  </div>
</div>
